<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final del día? "
        android:id="@+id/checkBox_FinalDia"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Técnicos:"
        android:id="@+id/textView2"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/checkBox_FinalDia"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_trabajadores"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/checkBox_FinalDia" />

    <Button
        android:id="@+id/ButtonEnviarDatos"
        android:layout_width="80pt"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="EnviarDatosDiario"/>

</RelativeLayout>